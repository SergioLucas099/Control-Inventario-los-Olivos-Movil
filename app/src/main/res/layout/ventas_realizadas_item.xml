<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15dp">

    <LinearLayout
        android:id="@+id/seleccionarVenta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:src="@drawable/reloj"/>

            <TextView
                android:id="@+id/TxtFechaVenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha: 17/01/2025 - 8:05 a. m."
                android:textSize="18sp"
                android:fontFamily="@font/aclonica"
                android:layout_marginStart="10sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            android:layout_marginTop="10sp">

            <ImageView
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:src="@drawable/zone"/>

            <TextView
                android:id="@+id/TxtMesaVenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mesa 1"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:fontFamily="@font/aclonica"
                android:layout_marginStart="10sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left"
            android:layout_marginTop="10sp">

            <ImageView
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:src="@drawable/pesos"/>

            <TextView
                android:id="@+id/TxtPrecioVentas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$1700"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:fontFamily="@font/aclonica"
                android:layout_marginStart="10sp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>